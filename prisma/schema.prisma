generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  orders    Order[]
  role      String   @default("user") // "admin" for admin access
}

model Product {
  id        String   @id @default(cuid())
  name      String
  price     Float
  image     String?
  cause     String
  description String?
}

model Order {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  items     Json
  createdAt DateTime @default(now())
}
